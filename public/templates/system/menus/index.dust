{>"layouts/master" /} 
{<content}
<div class="panel-group" id="mainContent">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="btn-group">
                <a data-toggle="collapse" class="btn btn-default" data-toggle="collapse" data-parent="#mainContent" href="#condition">查询条件</a>
                <a class="btn btn-default" href="/system/menus/add">增加一级菜单</a>
            </div>
            
        </div>
        <div id="condition" class="panel-collapse collapse">
            <div class="panel-body">
                <form class="form-inline" role="form" action="#" method="post">
                    <div class="form-group">
                        <label class="sr-only" for="inputName">类型</label> 
                        <select class="form-control" id="inputType" name="tool[type]">
                            <option />
                            <option>开发工具</option>
                            <option>版本管理</option>
                            <option>开发服务器</option>
                            <option>数据库工具</option>
                        </select>
                    </div>
                    <button class="btn btn-default" type="submit">查询</button>
                    <input type="hidden" name="_csrf" value="{_csrf}" />
                </form>
            </div>
        </div>
    </div>
    
    <div class="panel panel-primary">
        <div class="panel-heading">查询结果</div>
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th class="col-md-3">菜单名</th>
                    <th class="col-md-3">菜单链接</th>
                    <th class="col-md-3">级别</th>
                    <th class="col-md-3">操作选项</th>
                </tr>
            </thead>
            <tbody>
            {#menus} 
                <tr>
                  <td class="col-md-3">
                  {@select key=parent}
                  {@ne value="/"}
                    <a  data-toggle="tooltip" data-placement="top" title="显示上级菜单"  href="/system/menus/{id}/up" ><i class="icon-angle-left icon-large"></i></a>
                  {/ne}
                  {/select}
                    {.name}
                  {?subs}
                  <a  data-toggle="tooltip" data-placement="top" title="显示下级机构" href="/system/menus/{.id}/down"><i class="icon-angle-right icon-large"></i></a></td>
                  {/subs}    
                  <td class="col-md-3">{.fullUrl}</td>
                  <td class="col-md-3">{@baseCode code="{.levelId}" base="menuLevel"/}</td>
                  <td class="col-md-3">
                      {?isAdmin}
                      <div class="btn-group btn-group-sm">
                        <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="编辑" href="/system/menus/{.id}/edit"><i class="icon-edit icon-large"></i></a>
                        <a class="btn btn-default {@select key=levelId}{@gte value=3}disabled{/gte}{/select}"  href="/system/menus/{.id}/addSub" data-toggle="tooltip" data-placement="top" title="新增下级"><i class="icon-plus icon-large"></i></a>
                      </div>
                      {:else}
                      <a class="btn btn-default btn-xs disabled" href="#">修改</a>
                      <a class="btn btn-default btn-xs disabled" href="#">删除</a>
                      {/isAdmin}
                  </td>
                </tr>
            {/menus}
            </tbody>
        </table>
    </div>
</div>
        <div class="container-fluid">
            <ul class="pagination"></ul>
        </div>
{/content}
{<script}
<script type="text/javascript">
    var options = {
        currentPage: {page},
        bootstrapMajorVersion : 3,
        totalPages: {pageCount},
        pageUrl : function(type, page, current){
            return '/menus?page='+page;
        },
        itemContainerClass: function (type, page, current) {
            return (page === current) ? "disabled" : "pointer-cursor";
        },
        itemTexts: function (type, page, current) {
            switch (type) {
                case "first":
                    return "<<";
                case "prev":
                    return "<";
                case "next":
                    return ">";
                case "last":
                    return ">>";
                case "page":
                    return page;
            }
        }
    };
    $('.pagination').bootstrapPaginator(options);
</script> 
{/script}